<h1>Editing Book</h1>
<%= form_with model:@book, local:true do |f| %>

<% if @book.errors.any? %>
   <h3>Total <%= @book.errors.count %> error </h3>
   <ul>
      <% @book.errors.full_messages.each do |message| %>
       <li><%= message %></li>
      <% end %>
    </ul>
  <% end %>

  <div class="Title">
    <%= f.label :Title %> <br>
    <%= f.text_field :title %>
  </div>
  <div>
  <%= f.label :Body %> <br>
  <%= f.text_area :body %>
  </div>
  <div>
  <%= f.submit 'Update Book' %>
  </div>
<% end %>
<div>
  <%= link_to "Show", book_path(@book) %>
  <%= "|" %>
  <%= link_to "Back", books_path %>
</div>
